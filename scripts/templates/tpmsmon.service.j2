[Unit]
Description=ECU Monitor
After=network.target

[Service]
Environment=RTL433=/home/pi/rtl_433/build/src/rtl_433
Environment=RENIXCFG=/etc/renix.toml
ExecStart=/home/pi/RenixMonitor/.venv/bin/python /home/pi/RenixMonitor/tpms_monitor.py
WorkingDirectory=/home/pi/RenixMonitor
StandardOutput=inherit
StandardError=inherit
Restart=on-failure
RestartSec=5s
User=pi

[Install]
WantedBy=multi-user.target