[Unit]
Description=ECU Monitor
After=network.target

[Service]
ExecStart=/home/pi/RenixDisplay/builds/renixdisplay-linux-armv7l/renixdisplay
WorkingDirectory=/home/pi/RenixDisplay
StandardOutput=inherit
StandardError=inherit
Restart=on-failure
RestartSec=5s
User=pi

[Install]
WantedBy=multi-user.target