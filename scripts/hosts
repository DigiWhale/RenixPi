[raspilocal]
raspberrypi.local

[raspilocal:vars]
ansible_connection=ssh
ansible_user=pi
ansible_ssh_pass=raspberry
ansible_ssh_common_args='-o StrictHostKeyChecking=no'

[renixlocal]
renix.local

[renixlocal:vars]
ansible_connection=ssh
ansible_user=pi
ansible_ssh_private_key_file=~/.ssh/renix.pem
ansible_ssh_common_args='-o StrictHostKeyChecking=no'

